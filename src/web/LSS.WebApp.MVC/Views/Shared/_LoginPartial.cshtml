
@using LSS.WebApp.MVC.Extensions
@inject IUser AppUser 

<ul class="navbar-nav text-right">

    @if (AppUser.EstaAutenticado())
    {
        <li class="nav-item px-2">
            <a class="nav-link text-dark">Olá Usuário: @AppUser.ObterUserEmail()</a>
        </li>
        <li class="nav-item">
            <a  class="nav-link text-dark" asp-controller="Identidade" asp-action="Logout">Sair</a>
        </li> 
   }
    else
    {

        <li class="nav-item  px-2">
            <a  class="btn btn-success" asp-controller="Identidade" asp-action="Registro">Crie sua conta</a>
        </li>
        <li class="nav-item">
            <a class="btn btn-primary" asp-controller="Identidade" asp-action="Login">Login</a>
        </li>
    }

</ul>